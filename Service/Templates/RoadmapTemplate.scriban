<!DOCTYPE html>
<html lang="en">
<head>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ Title }}</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f5f7fb;
      margin: 0;
      padding: 30px;
    }
    h1 {
      text-align: center;
      color: #2c3e50;
      margin-bottom: 10px;
    }
    .meta {
      text-align: center;
      margin-bottom: 30px;
      font-size: 15px;
      color: #555;
    }
    .description {
      text-align: center;
      max-width: 75%;
      margin: auto;
      color: #666;
      line-height: 1.6;
    }
    h2 {
      color: #2c3e50;
      margin: 50px 0 20px;
      text-align: center;
      font-size: 1.8rem;
    }
    .card {
      background: #fff;
      margin: 20px auto;
      border-radius: 14px;
      box-shadow: 0 6px 12px rgba(0,0,0,0.08);
      width: 85%;
      overflow: hidden;
      transition: all 0.3s ease;
    }
    .card-header {
      padding: 20px;
      background: #3498db;
      color: #fff;
      cursor: pointer;
      font-size: 1.2rem;
      font-weight: bold;
    }
    .card-header:hover {
      background: #2980b9;
    }
    .card-content {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.4s ease, padding 0.3s ease;
      padding: 0 20px;
    }
    .card-content.open {
      max-height: 2000px;
      padding: 20px;
    }
    .skills {
      margin: 15px 0;
      padding: 0;
      list-style: none;
    }
    .skills li {
      background: #eaf4ff;
      display: inline-block;
      padding: 6px 14px;
      margin: 5px 5px 5px 0;
      border-radius: 20px;
      font-size: 13px;
      color: #1f78d1;
      font-weight: 500;
    }
    .week-card {
      margin: 12px 0;
      border: 1px solid #eee;
      border-radius: 10px;
      overflow: hidden;
    }
    .week-header {
      padding: 12px 16px;
      background: #f1f9ff;
      cursor: pointer;
      font-weight: 600;
      color: #2c3e50;
    }
    .week-header:hover {
      background: #dceeff;
    }
    .week-content {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease, padding 0.2s ease;
      padding: 0 16px;
      color: #555;
    }
    .week-content.open {
      max-height: 400px;
      padding: 12px 16px;
    }
    .career {
      margin: 20px auto;
      padding: 0;
      list-style: none;
      text-align: center;
    }
    .career li {
      background: #dff5e1;
      display: inline-block;
      padding: 8px 16px;
      margin: 6px;
      border-radius: 20px;
      font-size: 14px;
      color: #2e7d32;
      font-weight: 500;
    }
    .courses {
      margin: 10px 0;
      padding-left: 20px;
    }
    .courses li {
      margin: 6px 0;
    }
    .courses a {
      color: #1f78d1;
      text-decoration: none;
      font-weight: 500;
    }
    .courses a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <h1>{{ Title }}</h1>
  <div class="meta">
    <b>Difficulty:</b> {{ DifficultyLevel }} |
    <b>Duration:</b> {{ TotalDurationMonths }} months ({{ TotalHours }} hours)
  </div>
  <p class="description">{{ Description }}</p>

  <h2>Phases</h2>
  {{ for phase in Phases }}
  <div class="card">
    <div class="card-header">üìò {{ phase.Title }} (Month {{ phase.Month }})</div>
    <div class="card-content">
      <p><b>Focus:</b> {{ phase.Focus }}</p>

      <b>Skills Gained:</b>
      <ul class="skills">
        {{ for skill in phase.SkillsGained }}
          <li>{{ skill }}</li>
        {{ end }}
      </ul>

      {{ if phase.Prerequisites }}
      <b>Prerequisites:</b>
      <ul class="skills">
        {{ for pre in phase.Prerequisites }}
          <li>{{ pre }}</li>
        {{ end }}
      </ul>
      {{ end }}

      {{ if phase.RecommendedCourses }}
      <b>Recommended Courses:</b>
      <ul class="courses">
        {{ for course in phase.RecommendedCourses }}
          {{ $parts = string.split course " - " }}
          <li>
            <a href="{{ ($parts.size > 1) ? $parts[1] : course }}" target="_blank">
              {{ ($parts.size > 1) ? $parts[0] : course }}
            </a>
          </li>
        {{ end }}
      </ul>
      {{ end }}

      <h4>Weeks</h4>
      {{ for week in phase.Weeks }}
      <div class="week-card">
        <div class="week-header">‚û°Ô∏è Week {{ week.Week }}: {{ week.Focus }} ({{ week.Hours }} hours)</div>
        <div class="week-content">
          <b>Topics:</b> {{ array.join week.Topics ", " }}<br>
          <b>Deliverables:</b> {{ array.join week.Deliverables ", " }}
        </div>
      </div>
      {{ end }}
    </div>
  </div>
  {{ end }}

  <h2>Career Outcomes</h2>
  <ul class="career">
  {{ for job in CareerOutcomes }}
    <li>{{ job }}</li>
  {{ end }}
  </ul>

  <script>
    document.querySelectorAll('.card-header').forEach(header => {
      header.addEventListener('click', () => {
        const content = header.nextElementSibling;
        content.classList.toggle('open');
      });
    });
    document.querySelectorAll('.week-header').forEach(header => {
      header.addEventListener('click', () => {
        const content = header.nextElementSibling;
        content.classList.toggle('open');
      });
    });
  </script>
</body>
</html>


